#version 400 core

struct Attenuation {
	float constant;
	float linear;
	float exponent;
};

struct PointLight {
	vec3 color;
	vec3 position;
	float intensity;
	Attenuation attenuation;
};

struct Material {
	vec3 color;
	int useColor;
	float reflectance;
};

struct DirectionalLight {
	vec3 color;
	vec3 direction;
	float intensity;
};